{
  "schemaVersion": 1,
  "id": "autoswitch",
  "version": "${version}",
  "name": "AutoSwitch",
  "description": "Automatic switching of tools on the hotbar to the best one for the job.",
  "authors": [
    "Deximus-Maximus"
  ],
  "contact": {
    "discord": "https://discord.gg/X39v7hMzJU",
    "homepage": "https://github.com/dexman545/Fabric-Autoswitch",
    "sources": "https://github.com/dexman545/Fabric-Autoswitch",
    "issues": "https://github.com/dexman545/Fabric-Autoswitch/issues"
  },
  "license": "LGPL-3.0",
  "icon": "assets/aswitch/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "autoswitch.AutoSwitch"
    ]
  },
  "depends": {
    "fabricloader": ">=0.11.3",
    "fabric-key-binding-api-v1": ">=1.0.0",
    "fabric-tool-attribute-api-v1": "^1.0.2",
    "fabric-lifecycle-events-v1": ">=1.0.0",
    "fabric-command-api-v1": ">=1.1.0",
    "fabric-resource-loader-v0": "*",
    "minecraft": "${range}",
    "autoswitch-api": "^1.0.0",
    "java": ">=${java}"
  },
  "mixins": [
    "autoswitch.mixins.json"
  ],
  "custom": {
    "modupdater": {
      "strategy": "curseforge",
      "projectID": 347405
    },
    "stopmodreposts:showToast": false,
    "stopmodreposts:showButton": false
  }
}